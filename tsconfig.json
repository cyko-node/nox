{
  "extends": "./tsconfig.module.esnext.json",

  "compilerOptions": {
    /*
     * Check JavaScript.
     * Don't generate or assume code.
     */

    "allowJs": true,
    "checkJs": true,

    "noImplicitAny": false, // enable non-explicit parameter types etc.
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,

    "noEmit": true, // don't generate code.
    "strict": true, // check types.
    "strictNullChecks": true, // check null and undefined.

    /*
     * Unsorted.
     */

    "allowSyntheticDefaultImports": true, // enable import x from y
    "resolveJsonModule": true, // requires "moduleResolution": "Node*"
  },

  "files": [ ],

  "include": [ "./code/lib/**/*"  ],
  "exclude": [ "./code/bak/**/*", "./code/types/**/*" ],
}
